<html>
<style>
    table {
        border-collapse: separate;
        border: 1px solid black;
    }

</style>
<table style="width:70%">
    <tr>
        <th>S.No</th>
        <th>TIME</th>
        <th>source</th>
        <th>destination</th>
        <th>amount</th>
        <th>status</th>
        <th>type</th>
        <th>balance</th>
    </tr>
    <% for(var i = 0; i < arr.length; i++) { %>
    <tr>
        <td><%= i %></td>
        <td><%= arr[i]._id %></td>
        <td><%= arr[i].source %></td>
        <td><%= arr[i].destination %></td>
        <td><%= arr[i].amount %></td>
        <td><%= arr[i].status %></td>
        <% if(arr[i].source == su) { %>
        <td>debited</td>
        <td><%= arr[i].sender %></td>
        <% }
        else{ %>
        <td>credited</td>
        <td><%= arr[i].reciver %></td>
        <% } %>

    </tr>
    <% } %>
    <a href='/'>home page</a>
</table>
</html>
